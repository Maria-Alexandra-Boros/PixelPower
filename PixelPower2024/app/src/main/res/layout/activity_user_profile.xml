<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fundalnou"
    tools:context=".UserProfileActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/fundalalb"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:id="@+id/pfp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:src="@drawable/ppwr"
                android:scaleType="centerCrop"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="4dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pfp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="PixelPower"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/bioTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="🌍💕Volunteering is not just a hobby for me, it's a way of life."
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="#666666"
                android:fontFamily="sans-serif" />

            <LinearLayout
                android:id="@+id/statisticsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bioTextView"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/followersCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="0 FOLLOWERS"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/eventCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="3 PARTICIPATIONS"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>


            <EditText
                android:id="@+id/signup_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/fundalalb"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:hint="pixelpower@gmail.com"
                android:padding="8dp"
                android:textColor="@color/black" />


            <EditText
                android:id="@+id/signup_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/fundalalb"
                android:drawableLeft="@drawable/baseline_person_pin_24"
                android:drawablePadding="8dp"
                android:hint="PixelPower"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/fundalalb"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="12345"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/editProfileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:text="edit profile"
                android:textSize="16sp"
                android:backgroundTint="@color/fundal"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:elevation="4dp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>